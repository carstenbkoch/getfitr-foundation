{
    "name": "getfitr-foundation",
    "version": "0.0.2",
    "description": "The foundational UI and backend communication elements for GetFitr.",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "document": "standard-version",
        "document-major": "standard-version --release-as major",
        "fresh-npm-install": "rm -rf ./node_modules ./package-lock.json && npm install",
        "git-add-and-commit": "git add . && git commit -m 'fix: create build'",
        "push-and-publish": "git push --follow-tags origin main && npm publish",
        "release": "npm-run-all test wipe build document push-and-publish",
        "release-major": "npm-run-all test wipe build document-major push-and-publish",
        "test": "jest",
        "test:watch": "jest --watch",
        "wipe": "rm -rf ./lib"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/carstenbkoch/getfitr-foundation.git"
    },
    "keywords": [
        "ui",
        "react",
        "getfitr"
    ],
    "author": "Carsten Koch",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/carstenbkoch/getfitr-foundation/issues"
    },
    "homepage": "https://github.com/carstenbkoch/getfitr-foundation#readme",
    "dependencies": {
        "@expo/vector-icons": "^12.0.3",
        "expo": "^40.0.1",
        "expo-font": "^9.0.0",
        "expo-splash-screen": "^0.9.0",
        "lodash": "^4.17.20",
        "react": "^17.0.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
        "@babel/plugin-transform-arrow-functions": "^7.12.1",
        "@babel/plugin-transform-modules-umd": "^7.12.1",
        "@babel/polyfill": "^7.12.1",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@babel/preset-typescript": "^7.12.7",
        "@types/expo": "^33.0.1",
        "@types/jest": "^26.0.20",
        "@types/lodash": "^4.14.167",
        "@types/node": "^12.12.2",
        "@types/react": "^17.0.0",
        "@types/react-native": "^0.63.46",
        "babel": "^6.23.0",
        "babel-jest": "^26.6.3",
        "babel-preset-expo": "^8.3.0",
        "eslint": "^7.18.0",
        "jest": "^26.6.3",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "standard-version": "^9.1.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "deprecated": false,
    "bin": {
        "cbk-functional-library": "./lib/index.js"
    },
    "jest": {
        "transform": {
            "^.+\\.[t|j]sx?$": "babel-jest"
        }
    }
}
