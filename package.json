    "license": "MIT",
    "homepage": "https://github.com/carstenbkoch/getfitr-foundation",
    "main": "dist/index.js",
    "browser": "dist/getfitr-foundation.min.js",
    "module": "dist/es/index.js",
    "unpkg": "dist/getfitr-foundation.min.js",
    "files": [
        "*.md",
        "dist",
        "lib",
        "es"
    ],
    "keywords": [
        "ui",
        "react",
        "getfitr",
        "fitness-tracker"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/carstenbkoch/getfitr-foundation.git"
    },
    "bugs": {
        "url": "https://github.com/carstenbkoch/getfitr-foundation/issues"
    },
